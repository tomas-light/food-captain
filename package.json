{
  "private": true,
  "name": "food-captain",
  "version": "1.0.0",
  "description": "Food manager for home",
  "repository": "git@github.com:tomas-light/food-captain.git",
  "author": "Artem Ignatev <art.ser.ignatiev@gmail.com>",
  "license": "MIT",
  "workspaces": [
    "application/**"
  ],
  "scripts": {
    "start": "npm-run-all --parallel db:docker:run start:host start:api",
    "start:host": "npm run start --workspace @food-captain/host",
    "start:api": "npm run start --workspace @food-captain/api",
    "-": "",
    "start:without-scrabing": "npm-run-all --parallel db:docker:run startOnly:host startOnly:api",
    "startOnly:host": "npm run start-app --workspace @food-captain/host",
    "startOnly:api": "npm run start-app --workspace @food-captain/api",
    "--": "",
    "db&caddy": "npm-run-all --parallel db:docker:run caddy:run",
    "db:docker:run": "npm run db:docker:run --workspace @food-captain/database",
    "caddy:run": "npm run caddy:run --workspace @food-captain/host",
    "---": "",
    "build:server": "npm run build:test --workspace @food-captain/api",
    "build:client": "npm run build:test --workspace @food-captain/host",
    "test": "npm run test --workspace"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "6.13.1",
    "@typescript-eslint/parser": "6.13.1",
    "eslint": "8.54.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-import": "2.29.0",
    "eslint-plugin-prettier": "5.0.1",
    "eslint-plugin-react": "7.33.2",
    "npm-run-all": "4.1.5",
    "prettier": "3.1.0",
    "typescript": "5.2.2"
  }
}
